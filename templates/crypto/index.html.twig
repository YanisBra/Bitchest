{% extends 'base.html.twig' %}

{% block body %}


    <div class="example-wrapper">
        <h1>Liste des Cryptos</h1>
        <h2>MODIF</h2>
        {% if cryptoData is not empty %}
            <ul>
                {% for crypto in cryptoData %}
                    <li>{{ crypto.name }} - {{ crypto.price }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>No data available.</p>
        {% endif %}

        <h1>Historique des crypto </h1>
        {% if cryptoHistory is not null %}
            <pre>{{ dump(cryptoHistory) }}</pre>
        {% else %}
            <p>Aucune donn√©es d'historique disponibles pour le Bitcoin.</p>
        {% endif %}
    </div>
{% endblock %}
