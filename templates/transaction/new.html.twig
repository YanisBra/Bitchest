{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

<!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_transaction_index') }}">Transaction History</a></li>
                <li class="breadcrumb-item active" aria-current="page">New Transaction</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        {% if app.request.attributes.get('_route') == 'app_transaction_buy' %}
                            New Buy Transaction
                        {% else %}
                            New Sell Transaction
                        {% endif %}
                    </h5>
                    <form method="post">
                        {{ form_start(form) }}
                        {# {{ form_row(form._token) }}  #}

                        <div class="form-group row">
                            <label for="amount" class="col-sm-4 col-form-label">Amount</label>
                            <div class="col-sm-8">
                                {# <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter amount"> #}
                            {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}

                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="cryptocurrency" class="col-sm-4 col-form-label">Cryptocurrency</label>
                            <div class="col-sm-8">
                                {{ form_widget(form.cryptocurrency, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                         <div class="form-group row" style="display: none;">
                            <label for="user" class="col-sm-4 col-form-label">User</label>
                            <div class="col-sm-8">
                                {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        
                        <div class="col-sm-12 text-center mt-12"> <!-- Ajoutez la classe 'text-center' pour centrer les éléments -->
                            <button type="submit" class="btn btn-primary">
                                {% if app.request.attributes.get('_route') == 'app_transaction_buy' %}
                                    Buy
                                {% else %}
                                    Sell
                                {% endif %}
                            </button>
                            <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">Cancel</a>
                        </div>
                            {{ form_end(form) }}
                                                        {# {{ include('transaction/_form.html.twig') }} #}


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}