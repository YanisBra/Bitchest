{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="container">
    <div class="main-body">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                <li class="breadcrumb-item active" aria-current="page">New User</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>New User</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="post">
                            {{ form_start(form) }}
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}, 'label': false}) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}, 'label': false}) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control'}, 'label': false}) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Generated Password</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(form.motDePasseGenere, {'attr': {'class': 'form-control'}, 'label': false}) }}
                                </div>
                            </div>
                            {# <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Generated Password</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(form.password, {'attr': {'class': 'form-control'}, 'label': false}) }}
                                </div>
                            </div> #}
                             <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Role</h6>
                                </div>
                                <div class="col-sm-9">
                                    {% for role in form.roles %}
                                        <div class="form-check">
                                            {{ form_widget(role, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(role, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

